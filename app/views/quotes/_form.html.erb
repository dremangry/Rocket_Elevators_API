                        <div id="number-of-parking-spots" class="col-4 d-none commercial corporate hybrid">
                            <label><h4>Number of Parking Spots</h4></label>
                            <input type="number" min="0" max="1000" class="form-control" oninput="this.value = Math.abs(this.value)" required>
                        </div>
                        <div id="number-of-elevators" class="col-4 d-none commercial">
                            <label><h4>Number of Elevators</h4></label>
                            <input type="number" min="0" max="1000" class="form-control" oninput="this.value = Math.abs(this.value)" required>
                        </div>
                    
                        <div id="number-of-corporations" class="col-4 d-none corporate">
                            <label><h4>Number of Corporations</h4></label>
                            <input type="number" min="0" max="1000" class="form-control" oninput="this.value = Math.abs(this.value)" required>
                        </div>
                        <div id="maximum-occupancy" class="col-4 d-none corporate hybrid">
